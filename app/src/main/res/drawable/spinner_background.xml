<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- Удаляем элемент с shape (который содержит обводку) -->
            <!-- Оставляем только стрелку и настраиваем ее позицию -->

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#337cee"/>
                </shape>
            </item>
            <item android:gravity="end|center_vertical" android:right="8dp">
                <bitmap
                    android:src="@drawable/arrow_drop_down_24dp"
                    android:gravity="center"/>
            </item>
        </layer-list>
    </item>
</selector>